<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mine.MineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/jbbj"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/user_img"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="25dp"
                android:background="@drawable/user" />


            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:text="用户名"
                android:textColor="#6352CA"
                android:textSize="28sp"
                android:textStyle="bold" />


        </LinearLayout>

        <com.allen.library.SuperTextView
            android:id="@+id/user_about"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            stv:sLeftTextColor="#161466"
            stv:sLeftTextSize="18sp"
            stv:sLeftTextString="我的资料"
            stv:sRightIconRes="@drawable/ic_right_next" />


        <com.allen.library.SuperTextView
            android:id="@+id/user_address"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            stv:sLeftTextColor="#161466"
            stv:sLeftTextSize="18sp"
            stv:sLeftTextString="我的地址"
            stv:sRightIconRes="@drawable/ic_right_next" />


        <com.allen.library.SuperTextView
            android:id="@+id/app_about"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            stv:sLeftTextColor="#161466"
            stv:sLeftTextSize="18sp"
            stv:sLeftTextString="关于我们"
            stv:sRightIconRes="@drawable/ic_right_next" />


        <Button
            android:id="@+id/btn_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_btn_negative"
            android:text="退出登录"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>